  <style>
    body {
      font-family: Arial, sans-serif;
      max-width: 600px;
      margin: 40px auto;
      padding: 0 20px;
      background-color: #e6f2e6; /* fundo verde claro */
      color: #004d00; /* texto verde escuro */
    }
    h1 {
      text-align: center;
      color: #2d662d;
    }
    ul {
      padding-left: 0;
      list-style: none;
    }
    li {
      background: #ccffcc; /* verde claro */
      margin-bottom: 10px;
      padding: 10px;
      border-radius: 5px;
      border: 1px solid #339933;
      white-space: pre-line; /* para respeitar quebras de linha */
    }
    label, input, textarea {
      display: block;
      width: 100%;
      margin-bottom: 10px;
      border: 1px solid #339933;
      border-radius: 4px;
      padding: 8px;
      font-size: 1em;
      background-color: #f9fff9;
      color: #004d00;
    }
    button {
      padding: 10px 20px;
      background-color: #339933;
      color: white;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      font-weight: bold;
